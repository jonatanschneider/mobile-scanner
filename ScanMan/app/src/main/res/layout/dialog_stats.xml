<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <!-- Number of Created Documents -->
    <TextView
        android:id="@+id/number_of_created_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_of_created_documents"
        android:layout_marginTop="18dp"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/number_of_created_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/number_of_created_documents_title"/>

    <!-- Number of Shared Documents -->
    <TextView
        android:id="@+id/number_of_shared_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/number_of_shared_documents"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/number_of_created_documents"/>

    <TextView
        android:id="@+id/number_of_shared_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/number_of_shared_documents_title"/>


    <!-- Number of Documents shared with user -->
    <TextView
        android:id="@+id/number_of_documents_shared_with_user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/number_of_documents_shared_with_user"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/number_of_shared_documents"/>


    <TextView
        android:id="@+id/number_of_documents_shared_with_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/number_of_documents_shared_with_user_title"/>


    <!-- Number of all Documents -->
    <TextView
        android:id="@+id/number_of_all_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/number_of_all_documents"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/number_of_documents_shared_with_user"/>


    <TextView
        android:id="@+id/number_of_all_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/number_of_all_documents_title"/>

</RelativeLayout>