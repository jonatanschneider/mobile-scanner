<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <!-- Count of Created Documents -->
    <TextView
        android:id="@+id/count_of_created_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count_of_created_documents"
        android:layout_marginTop="18dp"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/count_of_created_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/count_of_created_documents_title"/>

    <!-- Count of Documents shared with others -->
    <TextView
        android:id="@+id/count_of_documents_shared_with_others_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/count_of_documents_shared_with_others"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/count_of_created_documents"/>

    <TextView
        android:id="@+id/count_of_documents_shared_with_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/count_of_documents_shared_with_others_title"/>


    <!-- Count of shared Documents -->
    <TextView
        android:id="@+id/count_of_shared_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/count_of_shared_documents"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/count_of_documents_shared_with_others"/>


    <TextView
        android:id="@+id/count_of_shared_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/count_of_shared_documents_title"/>


    <!-- Count of all Documents -->
    <TextView
        android:id="@+id/count_of_all_documents_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/count_of_all_documents"
        android:textColor="#80000000"
        android:textSize="14sp"
        android:layout_below="@+id/count_of_shared_documents"/>


    <TextView
        android:id="@+id/count_of_all_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/count_of_all_documents_title"/>

</RelativeLayout>